<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.4//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.microservice.house.mapper.UserMapper">
    <select id="selectUsers" resultType="user">
        select id from user
    </select>

    <insert id="insert">
        insert into user(
            name,
            phone,
            email,
            aboutme,
            passwd,
            avatar,
            type,
            create_time,
            enable
        )values(
            #{name},
            #{phone},
            #{email},
            #{aboutme},
            #{passwd},
            #{avatar},
            #{type},
            #{createTime},
            #{enable}
        )
    </insert>

    <delete id="delect">
        delete from user where email=#{email}
    </delete>

    <delete id="update">
        update user
        <set>
            <if test="phone !=null and phone != '' ">
                phone = #{phone},
            </if>
            <if test="name !=null and name != '' ">
                name = #{name},
            </if>
            <if test="aboutme !=null and aboutme != '' ">
                aboutme = #{aboutme},
            </if>
            <if test="passwd !=null and passwd != '' ">
                passwd = #{passwd},
            </if>
            <if test="enable !=null ">
                enable = #{enable},
            </if>
        </set>
        where email = #{email}
    </delete>
</mapper>